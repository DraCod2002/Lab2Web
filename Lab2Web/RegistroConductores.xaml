<Window x:Class="Lab2Web.RegistroConductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Conductores" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Width="200" Height="25"/>

        <TextBlock Text="Licencia:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Width="200" Height="25"/>

        <TextBlock Text="Fecha de Nacimiento:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="5" Width="200" Height="25"/>

        <Button Content="Guardar" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="5" Width="80" Height="30"/>
    </Grid>
</Window>
